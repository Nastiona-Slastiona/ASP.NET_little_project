@model Little_project.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RSVP</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="container justify-content-center">
    <form asp-action="RsvpForm" method="post">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Name">Your name:</label>
            <input asp-for="Name" class="form-control bg-dark" id="inputName" placeholder="Name">
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control bg-dark" id="inputEmail" placeholder="Email">
        </div>
        <div class="form-group">
            <label asp-for="Phone">Phone: </label>
            <input asp-for="Phone" class="form-control bg-dark" id="inputPhone" placeholder="Phone" />
        </div>
        <div class="checkbox">
            <label>Will you attend?</label>
            <select asp-for="willAttend">
                <option value="">Choose an option</option>
                <option value="true">Yes, I'll be there</option>
                <option value="false">No, I can't come</option>
            </select>
        </div>
        <div class="bg-dark justify-content-md-center">
        <button type="submit"> Submit RSVP</button>

        </div>
    </form>

    </div>
</body>

</html>
